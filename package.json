{
  "name": "python-template",
  "version": "1.5.0",
  "description": "Template repository for Python projects",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/python-template.git"
  },
  "engines": {
    "node": ">=10.21.0",
    "npm": ">=6.8.0"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 0",
    "updates": "npx ncu",
    "release": "np"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "commitlint-config-gitmoji": "^2.2.5",
    "husky": "^7.0.4",
    "np": "^7.6.1"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        80
      ],
      "subject-empty": [
        0,
        "never"
      ],
      "type-empty": [
        0,
        "never"
      ]
    }
  }
}
